# ==================================================
# LendSmart Backend - Environment Configuration
# ==================================================

# --------------------------------------------------
# Server Configuration
# --------------------------------------------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_VERSION=2.0.0

# --------------------------------------------------
# Database Configuration
# --------------------------------------------------
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/lendsmart_development
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME=30000
MONGO_SERVER_SELECTION_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000
MONGO_READ_PREFERENCE=primary
MONGO_READ_CONCERN=majority
MONGO_WRITE_CONCERN=majority
MONGO_WRITE_TIMEOUT=10000
MONGO_MAX_STALENESS=90
MONGO_AUTH_SOURCE=admin
MONGO_SSL=false
MONGO_SSL_VALIDATE=true
MONGO_HEARTBEAT_FREQUENCY=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_TLS_REJECT_UNAUTHORIZED=true

# Skip database connection for testing
SKIP_DB_CONNECTION=false

# --------------------------------------------------
# Security Configuration
# --------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production
REFRESH_TOKEN_EXPIRE=7d

# Encryption Configuration
ENCRYPTION_KEY=change-this-32-character-key-now
ENCRYPTION_ALGORITHM=aes-256-gcm
AUDIT_INTEGRITY_KEY=change-this-audit-integrity-key-now

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# --------------------------------------------------
# CORS Configuration
# --------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# --------------------------------------------------
# External Services
# --------------------------------------------------
# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Credit Bureau API
CREDIT_BUREAU_API_KEY=your-credit-bureau-api-key
CREDIT_BUREAU_API_URL=https://api.creditbureau.example.com

# Plaid (Banking Integration)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# --------------------------------------------------
# Blockchain Configuration
# --------------------------------------------------
# Ethereum/Blockchain RPC
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_CHAIN_ID=1
ETHEREUM_PRIVATE_KEY=your-private-key-for-deployment
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Smart Contract Addresses
LOAN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# --------------------------------------------------
# Notification Services
# --------------------------------------------------
# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@lendsmart.com
EMAIL_FROM_NAME=LendSmart

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Alternative Email Service)
SENDGRID_API_KEY=your-sendgrid-api-key

# --------------------------------------------------
# File Upload/Storage
# --------------------------------------------------
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lendsmart-documents

# Cloudinary (Alternative Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# --------------------------------------------------
# Logging Configuration
# --------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# --------------------------------------------------
# Rate Limiting
# --------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# --------------------------------------------------
# Monitoring & Observability
# --------------------------------------------------
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# --------------------------------------------------
# Feature Flags
# --------------------------------------------------
ENABLE_MFA=true
ENABLE_KYC_VERIFICATION=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_CREDIT_SCORING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# --------------------------------------------------
# Business Logic Configuration
# --------------------------------------------------
# Loan Configuration
MIN_LOAN_AMOUNT=1000
MAX_LOAN_AMOUNT=100000
MIN_INTEREST_RATE=5
MAX_INTEREST_RATE=25
MIN_LOAN_TERM_MONTHS=6
MAX_LOAN_TERM_MONTHS=60

# Credit Score Configuration
MIN_CREDIT_SCORE=300
MAX_CREDIT_SCORE=850
CREDIT_SCORE_THRESHOLD_APPROVAL=650

# KYC Configuration
KYC_VERIFICATION_REQUIRED=true
KYC_DOCUMENT_EXPIRY_DAYS=90

# --------------------------------------------------
# Development/Testing Configuration
# --------------------------------------------------
# Test Configuration
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=false

# Debug Configuration
DEBUG=false
VERBOSE_LOGGING=false
