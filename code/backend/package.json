{
  "name": "lendsmart-backend-production",
  "version": "2.0.0",
  "description": "Production-ready backend for LendSmart financial platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "security:audit": "npm audit",
    "security:check": "snyk test",
    "migrate": "node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t lendsmart-backend .",
    "docker:run": "docker run -p 5000:5000 lendsmart-backend"
  },
  "keywords": [
    "lending",
    "finance",
    "fintech",
    "api",
    "blockchain",
    "defi",
    "production"
  ],
  "author": "Abrar Ahmed",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1445.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-fileupload": "^1.4.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-openapi-validator": "^5.0.6",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-parse": "^1.1.1",
    "plaid": "^11.0.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.7",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.32.4",
    "speakeasy": "^2.0.0",
    "stripe": "^13.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "web3": "^4.1.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "artillery": "^2.0.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-security": "^1.7.1",
    "faker": "^6.6.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "snyk": "^1.1210.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**",
      "!src/scripts/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
