#
# LendSmart Backend Environment Variables
# Based on review of package.json, database.js, and blockchain.js
#

# -----------------------------------------------------------------------------
# 1. APPLICATION & SECURITY
# -----------------------------------------------------------------------------
# Node environment (e.g., development, production, test)
NODE_ENV=development
# Port for the Express server to run on
PORT=5000
# Secret key for signing JWTs (Implied by jsonwebtoken)
JWT_SECRET=
# Secret key for Express session management (Implied by express-session)
SESSION_SECRET=
# CORS origin for frontend access (e.g., http://localhost:3000)
CORS_ORIGIN=*

# -----------------------------------------------------------------------------
# 2. DATABASE (MongoDB)
# -----------------------------------------------------------------------------
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/lendsmart_production
# Optional MongoDB connection tuning parameters
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_AUTH_SOURCE=admin
MONGO_SSL=false

# -----------------------------------------------------------------------------
# 3. CACHING & QUEUE (Redis)
# -----------------------------------------------------------------------------
# Redis connection details (used for caching, rate limiting, and Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# -----------------------------------------------------------------------------
# 4. BLOCKCHAIN INTEGRATION
# -----------------------------------------------------------------------------
# RPC URL for the blockchain network (e.g., local Ganache or a public node)
BLOCKCHAIN_RPC_URL=http://localhost:8545
# Chain ID for the network
BLOCKCHAIN_CHAIN_ID=1337
# Address of the main loan smart contract
LEND_SMART_LOAN_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
# Default gas limit for transactions
GAS_LIMIT=3000000

# -----------------------------------------------------------------------------
# 5. EXTERNAL FINANCIAL SERVICES
# -----------------------------------------------------------------------------
# Plaid (Financial data aggregation)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox # sandbox, development, production
# Stripe (Payment processing)
STRIPE_SECRET_KEY=

# -----------------------------------------------------------------------------
# 6. CLOUD STORAGE & MEDIA
# -----------------------------------------------------------------------------
# AWS S3 (If used for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
# Cloudinary (Image/Media management)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# -----------------------------------------------------------------------------
# 7. NOTIFICATIONS (Email & SMS)
# -----------------------------------------------------------------------------
# SMTP Email Configuration (Implied by nodemailer)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@lendsmart.com
# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# 8. OAUTH (Google)
# -----------------------------------------------------------------------------
# Google OAuth 2.0 Credentials (Implied by passport-google-oauth20)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# The URL that Google will redirect to after authentication
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
